# /etc/bird/bird.conf

include "/etc/bird/filter4.conf";

define OWNAS = 4242420031;
define OWNIP = {{ host.ovpn_addr }};

router id {{ host.loopback }};

protocol device {
  scan time 10; # recheck every 10 seconds
}

protocol direct {
  interface "lo*";
  {% for interface in host.tunnel_interfaces %}
  interface "{{ interface }}";
  {% endfor %}
}

protocol static {
  route 172.22.150.64/26 reject;
  route 172.23.158.80/28 reject;
};

log "/var/log/bird/daemon" all;

protocol kernel {
  scan time 20;
  device routes;
  import none;
  export filter {
    krt_prefsrc = OWNIP;
    accept;
  };
};

protocol ospf SlothNet {
  rfc1583compat yes;
  area 0.0.0.0 {
    networks {
      172.22.150.64/26;
      172.23.158.64/26;
    };
    stub no;
    {% for interface in host.tunnel_interfaces %}
    {% if interface.ospf_cost is defined %}
    interface "{{ interface }}" {
      cost {{ interface.ospf_cost }};
    };
    {% endif %}
    {% endfor %}
  };
};

template bgp dnpeers {
  local as OWNAS;
  path metric 1;
  import keep filtered;
  import filter {
    if is_valid_network() && !is_self_net() && !is_anycast_invalid() then {
      accept;
    }
    reject;
  };
  export filter {
    if is_valid_network() then {
      accept;
    }
    reject;
  };
  route limit 10000;
  source address OWNIP;
};

template bgp ibgp {
  local as OWNAS;
  path metric 1;
  route limit 10000;
  source address OWNIP;
  gateway recursive;
  next hop self;
  import filter {
    if net != {{ host.loopback }}/32 then {
      accept;
    }
  };
  export filter {
    accept;
  };
};

include "/etc/bird/peers4/*";

